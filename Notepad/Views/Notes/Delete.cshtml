@using Notepad.Models.DTOs
@model BaseResponse<Notepad.Models.DTOs.Note.NoteDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Note";
}

<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this note?</h4>

<div class="card p-3 mb-3">
    <h5>@Model.Data.Tittle</h5>
    <p>@Model.Data.Content</p>
    <p><b>Created:</b> @Model.Data.DateCreated.ToString("g")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Data.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
