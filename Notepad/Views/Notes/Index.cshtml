
@using Notepad.Models.DTOs

@{
    ViewData["Title"] = "All Notes";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BaseResponse<IEnumerable<Notepad.Models.DTOs.Note.NoteDTO>>
<div class="p-3">
    <div class="d-flex justify-content-center align-items-center">
        <h2 class=" mb-0 me-3" style="color:#6D28D9;">All Notes</h2>

        <!-- Search Dropdown -->
        <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-search"></i>
            </button>
            <ul class="dropdown-menu p-3" style="min-width: 250px;">
                <form asp-action="Index" asp-controller="Notes" method="post">
                    <div class="input-group">
                        <input type="search" name="searchString" class="form-control" placeholder="Search" />
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </ul>
    </div>
</div>
   </div>
   </<div>
       </<div>
</div>
</div>

            

@if(Model.Data == null)
{
    <div class="alert alert-info" role="alert">
        No notes found. Click the "+" button to add a new note.
    </div>
}
else
{

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>

            <th>Date Created</th>
         
            @* <th>Actions</th> *@
        </tr>
    </thead>
    <tbody>
           
        @foreach (var item in Model.Data)

        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Notes" asp-route-id="@item.Id " style="text-decoration:none;color:black">@item.Tittle</a>

                <td>@item.DateCreated.ToLocalTime().ToString("g")</td>
            </tr>


            }
        


          
          
